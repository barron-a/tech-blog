<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="form-floating mb-3">
        <input type="text" name="post-title" class="form-control" id="post-title" placeholder="Title text goes here"/>
        <label for="post-title">Title</label>
    </div>
    <div class="form-floating">
        <input type="text" name="post-body" class="form-control" id="post-body" placeholder="Body text goes here"/>
        <label for="post-body">Body</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="mt-4">
    <h2>Your Posts</h2>
        {{#each posts as |post|}}
            {{> post-data post}}
        {{/each}}
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>